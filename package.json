{
  "name": "collab-ui-angular-cli",
  "version": "0.0.0",
  "scripts": {
    "build": "run-s test build:lib build:schematics",
    "build:docs": "ng build --project=docs",
    "build:lib": "ng build",
    "build:schematics": "npm-run-all build:schematics:ts build:schematics:collection",
    "build:schematics:collection": "cpy --parents --cwd='src/schematics/src/' '**/*.json' ../../../dist/@collab-ui/angular/schematics",
    "build:schematics:ts": "tsc -p ./src/schematics/tsconfig.json",
    "clean:dist": "rimraf dist",
    "e2e": "ng e2e",
    "gen:c": "ng g c --project=@collab-ui/angular",
    "gen:m": "ng g m --project=@collab-ui/angular",
    "lint": "ng lint --project=@collab-ui/angular",
    "ng": "ng",
    "serve": "ng serve --project=docs --open --extra-webpack-config webpack.partial.js",
    "start": "run-p --race watch:lib watch:serve",
    "test": "jest",
    "test:CI": "jest --maxWorkers=2 --bail",
    "test:schematics": "npm run build && jasmine dist/@collab-ui/angular/schematics/**/*_spec.js",
    "test:watch": "jest --watch",
    "watch:lib": "yarn clean:dist && ng build @collab-ui/angular --watch",
    "watch:serve": "wait-on dist/@collab-ui/angular/fesm5/collab-ui-angular.js && yarn serve"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^7.0.0",
    "@angular/cdk": "^7.2.1",
    "@angular/common": "^7.0.0",
    "@angular/compiler": "^7.0.0",
    "@angular/core": "^7.0.0",
    "@angular/forms": "^7.0.0",
    "@angular/http": "^7.0.0",
    "@angular/platform-browser": "^7.0.0",
    "@angular/platform-browser-dynamic": "^7.0.0",
    "@angular/router": "^7.0.0",
    "@collab-ui/core": "^11.7.0",
    "core-js": "^2.5.4",
    "lodash": "^4.17.11",
    "rxjs": "~6.3.3",
    "zone.js": "~0.8.26"
  },
  "devDependencies": {
    "@angular-builders/jest": "^7.3.1",
    "@angular-devkit/build-angular": "^0.13.0",
    "@angular-devkit/build-ng-packagr": "~0.10.0",
    "@angular/cli": "^7.2.1",
    "@angular/compiler-cli": "^7.0.0",
    "@angular/language-service": "^7.0.0",
    "@types/jasmine": "~2.8.8",
    "@types/jasminewd2": "~2.0.3",
    "@types/jest": "^24.0.9",
    "@types/node": "~8.9.4",
    "codelyzer": "~4.5.0",
    "cpy-cli": "^2.0.0",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "jest": "^23.6.0",
    "jest-preset-angular": "^6.0.2",
    "lodash-es": "^4.17.4",
    "ng-packagr": "^4.2.0",
    "ngx-build-plus": "^7.7.6",
    "npm-run-all": "^4.1.5",
    "protractor": "~5.4.0",
    "rimraf": "2.6.2",
    "shallow-render": "^7.1.3",
    "ts-node": "^7.0.0",
    "tsickle": ">=0.29.0",
    "tslib": "^1.9.0",
    "tslint": "~5.11.0",
    "typescript": "~3.1.1",
    "wait-on": "^3.2.0"
  },
  "jest": {
    "preset": "jest-preset-angular",
    "setupTestFrameworkScriptFile": "<rootDir>/test/setupJest.ts",
    "roots": [
      "<rootDir>/src/lib/"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png)$": "<rootDir>/test/image.js",
      "^@lib/(.*)$": "<rootDir>/src/lib/$1"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "src/lib/tsconfig.spec.json"
      },
      "__TRANSFORM_HTML__": true
    },
    "testMatch": [
      "**/+(*.)+(spec|test).+(ts|js)?(x)"
    ],
    "collectCoverageFrom": [
      "src/lib/**/*.{js,ts}",
      "!src/lib/**/index.{js,ts}",
      "!**/node_modules/**"
    ],
    "coverageDirectory": "test/coverage",
    "transformIgnorePatterns": [
      "node_modules/(?!lodash-es)"
    ]
  },
  "workspaces": {
    "nohoist": [
      "jest-preset-angular",
      "@angular/**",
      "@angular-devkit"
    ]
  }
}
